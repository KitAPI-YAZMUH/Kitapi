    <body>

        <!-- Spinner Start -->
        <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
            <div class="spinner-grow text-primary" role="status"></div>
        </div>
        <!-- Spinner End -->

        <!-- Header -->
        <%- include('partials/header', { activePage: 'ask' }) %>

        <!-- Hero Start -->
        <div class="container-fluid py-5 mb-5 promt-header">
            <div class="container py-20">
                <div class="row g-5 align-items-center">
                    
                        
                        <div class="position-relative mx-auto">
                            
                            <div id="sohbet-alani">
                                <div class="mesajlar">
                                  <div class="kullanici-mesaji">Merhaba KitAPI! </div>
                                  <div class="ai-mesaji">Merhaba! Ben KitAPI. Bugün size nasıl yardımcı olabilirim?</div>
                                </div>
                                <div class="position-relative mx-3 my-2">
                                  <input
                                    class="form-control border-2 border-secondary w-100 py-3 px-4 rounded-pill"
                                    type="text"
                                    id="search"
                                    placeholder="AI'ya sormak için buraya yaz."
                                    onkeydown="if(event.keyCode === 13) gonder()"
                                  />
                                  <button
                                    type="submit"
                                    class="gonderbutton btn-primary border-2 border-secondary py-3 px-4 position-absolute rounded-pill text-white h-100"
                                    style="top: 0; right: 0"
                                    onclick="gonder()"
                                  >
                                    Sohbet Et
                                  </button>
                                </div>
                              </div>
                        </div>
                    
                    
                </div>
            </div>
        </div>
        <!-- Hero End -->
<!-- Buton -->


<!-- Bootstrap JS Bundle -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
