<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <title>Okuma Listelerim</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet" />

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Libraries Stylesheet -->
    <link href="lib/lightbox/css/lightbox.min.css" rel="stylesheet" />
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet" />
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->

    <!-- Header -->
    <%- include('partials/header', { activePage: 'lists' }) %>

        <!-- Modal Search Start -->
        <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-fullscreen">
                <div class="modal-content rounded-0">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">
                            Search by keyword
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body d-flex align-items-center">
                        <div class="input-group w-75 mx-auto d-flex">
                            <input type="search" class="form-control p-3" placeholder="keywords" aria-describedby="search-icon-1" />
                            <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal Search End -->

        <!-- Single Page Header start -->
        <div class="container-fluid page-header py-5">
            <h1 class="text-center text-white display-6">Okuma Listelerim</h1>
        </div>
        <!-- Single Page Header End -->

        <!-- Cart Page Start -->
        <div class="container-fluid py-5">
            <div class="container py-5">
                <table>
                    <thead>
                        <tr>
                            <td colspan="4">

                                <div class="list-time fr">
                                    <button class="btn border-secondary rounded-pill px-4 py-3 text-primary" type="button" value="1" onclick="getBooksByStatus(event,1)">
                    Okudum
                  </button>
                                    <a href="cart"></a>
                                    &nbsp;<span id="readlist-type-total-1"></span></button>

                                    <button class="btn border-secondary rounded-pill px-4 py-3 text-primary" type="button" value="2" onclick="getBooksByStatus(event,2)">
                    Okuyorum
                  </button>
                                    <a href="cart"></a>
                                    &nbsp;<span id="readlist-type-total-1"></span></button>
                                    <button class="btn border-secondary rounded-pill px-4 py-3 text-primary" type="button" value="3" onclick="getBooksByStatus(event,3)">
                    Okuyacağım
                  </button>
                                    <a href="cart"></a>
                                    &nbsp;<span id="readlist-type-total-1"></span></button>
                                </div>
                            </td>
                        </tr>
                    </thead>

                </table>
                <div class="table-responsive">
                    <h3 class="mb-4">Okudum Listem</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Kitap</th>
                                <th scope="col">Adı</th>
                                <th scope="col">Yazar</th>
                                <th scope="col">Yayınevi</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody id = "booksTable">
                            <% if (value == 1 && books) { %>
                                <% books.forEach(function(book) { %>
                                    <tr>
                                        <th scope="row">
                                            <div class="d-flex align-items-center">
                                                <img src="<%= book.resim_url %>" class="img-fluid me-5" style="width: 124px; height: 200px" alt="" />
                                            </div>
                                        </th>
                                        <td>
                                            <p class="mb-0 mt-4"><%= book.kitap_adi %></p>
                                        </td>
                                        <td>
                                            <p class="mb-0 mt-4"><%= book.yazar_adi %></p>
                                        </td>
                                        <td>
                                            <p class="mb-0 mt-4"><%= book.kitap_adi %></p>
                                        </td>
                                        <td>
                                            <button class="btn btn-md rounded-circle bg-light border mt-4">
                                                <i class="fa text-danger">Okuyorum</i>
                                            </button>
                                            <button class="btn btn-md rounded-circle bg-light border mt-4">
                                                <i class="fa text-success">Okuyacağım</i>
                                            </button>
                                        </td>
                                        <td>
                                            <p class="mb-0 mt-4">Listeden Kaldır</p>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6">Henüz kitap bulunmamaktadır.</td>
                                </tr>
                            <% } %>
                           
                        </tbody>
                    </table>
                </div>


            </div>
        </div>
        <!-- Cart Page End -->

        <!-- Footer -->
        <%- include(footer) %>

            <!-- JavaScript Libraries -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="lib/easing/easing.min.js"></script>
            <script src="lib/waypoints/waypoints.min.js"></script>
            <script src="lib/lightbox/js/lightbox.min.js"></script>
            <script src="lib/owlcarousel/owl.carousel.min.js"></script>
            <!-- Template Javascript -->
            <script src="js/main.js"></script>
            <script>
                function getBooksByStatus(event, value) {
                   
                    $.ajax({
                        type: "POST",
                        url: "/cart",
                        data: {
                            value
                        },
                        success: function(response) {
                            // window.location.reload();
                            if (response && response.books) {

                                console.log(response);
                                var books = response.books; // Sunucudan gelen kitap verileri
                                const tablo = document.querySelector('#booksTable');
                                tablo.innerHTML = '';
                                response.books.forEach(book => {

                                    tablo.innerHTML += `<tr>
                                        <th scope="row">
                                            <div class="d-flex align-items-center">
                                                <img src = ${book.resim_url} class="img-fluid me-5" style="width: 124px; height: 200px" alt="" />
                                            </div>
                                        </th>
                                        <td>
                                            <p class="mb-0 mt-4"> ${book.kitap_adi} </p>
                                        </td>
                                        <td>
                                            <p class="mb-0 mt-4"> ${book.yazar_adi} </p>
                                        </td>
                                        <td>
                                            <p class="mb-0 mt-4"> ${book.kitap_adi} </p>
                                        </td>
                                        <td>
                                            <button class="btn btn-md rounded-circle bg-light border mt-4">
                                                <i class="fa text-danger">Okuyorum</i>
                                            </button>
                                            <button class="btn btn-md rounded-circle bg-light border mt-4">
                                                <i class="fa text-success">Okuyacağım</i>
                                            </button>
                                        </td>
                                        <td>
                                            <p class="mb-0 mt-4">Listeden Kaldır</p>
                                        </td>
                                    </tr>`
                                });
                                
                            } else {
                                alert("Kitap bulunamadı.");
                            }
                        },
                        error: function(xhr, status, error) {
                            console.error("Ajax hatası:", error);
                            alert("Ajax hatası: " + error);
                        }
                    });
                }
            </script>
</body>

</html>